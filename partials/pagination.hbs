{{#if prev}}
<a class="btn page-prev" onclick="location.href='{{page_url prev}}'"><i class="fa fa-chevron-left" aria-hidden="true"></i> Newer posts</a>
{{/if}}
<p class="page-number">page {{page}} of {{pages}}</p>
{{#if next}}
<a class="btn page-next" onclick="location.href='{{page_url next}}'">Older posts <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
{{/if}}
